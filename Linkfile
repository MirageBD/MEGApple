MEMORY
{
	RAM:		start=$1000, size=$50000;
}

SEGMENTS
{
	MAIN:			load=RAM, start=$1000;
	SDC:			load=RAM, align=256;
	LEDS:			load=RAM, align=256;
	RINGBUFFER:		load=RAM, align=256;
	SAMPLEPLAY:		load=RAM, align=256;
	PALETTE:		load=RAM, align=256;
	SPRITEPAL:		load=RAM, align=256;
	SPRITES:		load=RAM, align=256;
	INTROCHARS:		load=RAM, start=$30000;
}
